{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
    
    "compilerOptions": {
        "lib": ["ES6", "DOM"], //originally es2020
        "module": "commonjs",
        "target": "es2020",
    
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }  
}
      
